# Layout
alt - s : yabai -m space --layout stack
alt - e : yabai -m space --layout bsp
alt - f : yabai -m window --toggle zoom-fullscreen
alt + shift - space : yabai -m window --toggle float

# Focus window (Alt + h/j/k/l or arrows)
# In stack layout, directional focus does not work. Use stack navigation below.
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east
alt - left  : yabai -m window --focus west
alt - down  : yabai -m window --focus south
alt - up    : yabai -m window --focus north
alt - right : yabai -m window --focus east

# Stack navigation (works in stack layout)
#Â TODO: see if I can have same shortcuts
alt - n : yabai -m window --focus stack.next
alt - p : yabai -m window --focus stack.prev

# Move window (Alt + Shift + h/j/k/l or arrows)
# TODO: why can I only move windows rigth-left and not up-down? (while on bsp)
alt + shift - h : yabai -m window --swap west
alt + shift - j : yabai -m window --swap south
alt + shift - k : yabai -m window --swap north
alt + shift - l : yabai -m window --swap east
alt + shift - left  : yabai -m window --swap west
alt + shift - down  : yabai -m window --swap south
alt + shift - up    : yabai -m window --swap north
alt + shift - right : yabai -m window --swap east

# Switch to space (Alt + t/w/m/b/p/c/g)
# TODO: For focus to work, SIP must be disabled and scripting addition loaded (sudo yabai --load-sa)
alt - t : yabai -m space --focus 2
alt - w : yabai -m space --focus 3
alt - m : yabai -m space --focus 5
alt - b : yabai -m space --focus 6
alt - p : yabai -m space --focus 7
alt - c : yabai -m space --focus 4
alt - g : yabai -m space --focus 8

# Move window to space (Alt + Shift + t/w/m/b/p/c/g)
alt + shift - t : yabai -m window --space 2; yabai -m space --focus 2
alt + shift - w : yabai -m window --space 3; yabai -m space --focus 3
alt + shift - m : yabai -m window --space 5; yabai -m space --focus 5
alt + shift - b : yabai -m window --space 6; yabai -m space --focus 6
alt + shift - p : yabai -m window --space 7; yabai -m space --focus 7
alt + shift - c : yabai -m window --space 4; yabai -m space --focus 4
alt + shift - g : yabai -m window --space 8; yabai -m space --focus 8

# Launch applications
alt - return : open -na Alacritty
alt + shift - return : open -na 'Brave Browser'
alt + shift - n : open -a Finder
alt + shift - s : open 'x-apple.systempreferences:com.apple.preference.security'

# Close window
alt + shift - q : yabai -m window --close

# Reload skhd config
alt + shift - r : skhd --reload

# Resize window (direct, since skhd has no modes)
# TODO: Does not work consistently, sometimes you can resize only to one side
alt + ctrl - h : yabai -m window --resize left:-50:0
alt + ctrl - j : yabai -m window --resize bottom:0:50
alt + ctrl - k : yabai -m window --resize top:0:-50
alt + ctrl - l : yabai -m window --resize right:50:0
